<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.angel.provider.mapper.SysRoleMapper" >
  <resultMap id="BaseResultMap" type="com.angel.provider.model.domain.SysRole" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="role_name" property="roleName" jdbcType="VARCHAR" />
    <result column="role_code" property="roleCode" jdbcType="VARCHAR" />
    <result column="role_desc" property="roleDesc" jdbcType="VARCHAR" />
    <result column="ds_type" property="dsType" jdbcType="TINYINT" />
    <result column="ds_scope" property="dsScope" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="is_del" property="isDel" jdbcType="TINYINT" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, role_name, role_code, role_desc, ds_type, ds_scope, create_time, update_time, 
    is_del
  </sql>

  <sql id="Role_Column_List" >
    ${alias}.id, ${alias}.role_name, ${alias}.role_code, ${alias}.role_desc,
    ${alias}.ds_type, ${alias}.ds_scope, ${alias}.create_time, ${alias}.update_time,
    ${alias}.is_del
  </sql>

  <select id="findRolesByUserId" resultMap="BaseResultMap">
    SELECT
    <include refid="Role_Column_List">
      <property name="alias" value="r" />
    </include>
    FROM
    sys_role r, sys_user_role ur WHERE r.id = ur.role_id AND r.is_del = 0 and  ur.user_id IN (#{userId})
  </select>

</mapper>